#compdef calepin

local line

if [ -z "$CALEPIN_PATH" ]; then
	CALEPIN_PATH="$HOME/.calepin"
fi

if [ -z "$CALEPIN_EXT" ]; then
	CALEPIN_EXT="txt"
fi

_arguments -C \
	"1:action:(read write list move remove -h --help)" \
	"*::arg:->args"

case $line[1] in
	"read"|"write"|"move"|"remove")
		_arguments "1:notes:_files -W $CALEPIN_PATH -g '*.$CALEPIN_EXT(:r)'";;
esac
